{
  "$schema": "http://json.schemastore.org/template",
  "author": "LoremFooBar",
  "classifications": [
    "LoremFooBar",
    "NuGet",
    "Package",
    "Best Practices"
  ],
  "name": "Complete NuGet Package Project",
  "identity": "LoremFooBar.TemplatePack.Package",
  "shortName": "lfb-package",
  "sourceName": "MyPackageName",
  "sources": [
    {
      "exclude": [
        ".idea/**",
        ".template.config/**",
        "*.DotSettings*",
        "inspect.xml",
        "**/bin/**",
        "**/obj/**",
        "tests/*/test-results/**",
        "**/packages.lock.json"
      ],
      "modifiers": [
        {
          "rename": {
            "file.gitignore": ".gitignore"
          }
        }
      ]
    }
  ],
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "symbols": {
    "lowerCaseName": {
      "type": "generated",
      "generator": "casing",
      "datatype": "string",
      "replaces": "mypackagename",
      "parameters": {
        "source": "name",
        "toLower": true
      }
    }
  }
}
